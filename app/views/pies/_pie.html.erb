<div class="pie">
  <span class="pie-name"><%= pie.name %> - </span>
  <%= pie.description %>
  <% if pie.is_vegan %>
    <span class="pie-vegan"> Vegan </span>
  <% elsif pie.is_vegetarian %>
    <span class="pie-vegetarian"> Vegetarian </span>
  <% end %>
  <span class="pie-price"><%= number_to_currency pie.price %></span>
</div>
